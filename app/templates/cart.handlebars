<h1>This is a cart</h1>

<table class="table">
  <thead>
    <tr>
      <th>Album</th>
      <th>Item Price</th>
      <th>Quantity</th>
      <th>Subtotal</th>
      <th></th>
    </tr>
  </thead>
    <tbody>
      {{# each items }}
    <tr>
      <td>
        <img {{ bind-attr src=product.image }} class='album-image' /><br>
        {{ product.artist }}
      </td>
      <td> ${{ product.price }}</td>
      <td> {{ quantity }}
        <button {{ action 'less' this }}>-</button> 
        <button {{ action 'more' this }}>+</button> 
      </td>
      <td> ${{ subtotal product.price quantity }}</td>
      <td><button {{ action 'deleteItem' this }}>Delete</button></td>
    </tr>
    {{/ each}}
    <tr>
    <td>TOTAL</td>
    <td></td>
    <td></td>
    <td></td>
    </tr>


</table>